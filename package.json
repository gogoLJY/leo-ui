{
  "name": "leo-ui",
  "version": "1.0.0",
  "description": "A Component Library for Vue.js",
  "main": "lib/leo-ui.js",
  "style": "lib/index.css",
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "scripts": {
    "build": "webpack",
    "dev": "webpack-dev-server --config build/webpack.dev.js",
    "dist:style": "gulp --gulpfile build/gulpfile.js",
    "dist:prod": "webpack --config build/webpack.dist.js",
    "dist": "npm run dist:style && npm run dist:prod",
    "clean": "rimraf lib",
    "lint": "eslint --fix --ext .js,.vue src",
    "tslint": "tslint --type-check --fix --project ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,vue,scss}": "prettier --write",
    "*.{ts,js,vue}": "eslint --fix src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gogoLJY/leo-ui.git"
  },
  "author": "leogogo.ljy@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gogoLJY/leo-ui/issues"
  },
  "homepage": "https://github.com/gogoLJY/leo-ui#readme",
  "keywords": [
    "vue",
    "component",
    "ui"
  ],
  "peerDependencies": {
    "vue": ">=2.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-loader": "^8.1.0",
    "css-loader": "^5.0.0",
    "eslint": "^7.12.1",
    "eslint-plugin-vue": "^7.1.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^4.1.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "node-sass": "^5.0.0",
    "prettier": "^2.1.2",
    "progress-bar-webpack-plugin": "^2.1.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^10.0.5",
    "style-loader": "^2.0.0",
    "stylelint": "^13.7.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5",
    "vue": "^2.6.10",
    "vue-eslint-parser": "^7.1.1",
    "vue-loader": "^15.7.0",
    "vue-router": "^3.4.8",
    "vue-template-compiler": "^2.5.21",
    "vue-template-es2015-compiler": "^1.6.0",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^5.2.0"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ]
}
